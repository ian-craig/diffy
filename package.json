{
  "name": "diffy",
  "description": "A simple diff tool built on the Monaco code editor",
  "author": "ian-craig",
  "version": "0.1.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/ian-craig/diffy.git"
  },
  "dependencies": {
    "@types/chunk": "^0.0.0",
    "@types/jest": "24.0.23",
    "@types/node": "12.12.11",
    "@types/nodegit": "^0.24.13",
    "@types/p-queue": "^3.2.1",
    "@types/react": "16.9.11",
    "@types/react-dom": "16.9.4",
    "@types/react-redux": "^7.1.5",
    "@types/redux": "^3.6.0",
    "chunk": "^0.0.2",
    "cross-env": "^6.0.3",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^5.1.0",
    "electron-updater": "^4.2.0",
    "monaco-editor": "^0.18.1",
    "nodegit": "^0.26.2",
    "office-ui-fabric-react": "^7.63.0",
    "p-queue": "^6.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-monaco-editor": "^0.32.1",
    "react-redux": "^7.1.3",
    "react-scripts": "3.2.0",
    "react-split-pane": "^0.1.89",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "short-hash": "^1.0.0",
    "typescript": "^3.7.2"
  },
  "homepage": ".",
  "main": "build/electron.js",
  "build": {
    "appId": "com.electron.diffy"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "electron-build": "electron-builder",
    "release": "yarn react-build && yarn run compile && electron-builder --publish=always",
    "build": "yarn react-build && yarn run compile && yarn electron-build",
    "build:local": "yarn react-build && yarn run compile && yarn electron-build --dir",
    "compile": "tsc -p electron-tsconfig.json --noEmit false",
    "start": "concurrently \"yarn compile --watch\" \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write --ignore-path .gitignore **/*.{js,ts,tsx,css,json,md} "
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "concurrently": "^5.0.0",
    "electron": "^7.1.2",
    "electron-builder": "^22.1.0",
    "electron-devtools-installer": "^2.2.4",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "wait-on": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
