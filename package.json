{
  "name": "diffy",
  "description": "A simple diff tool built on the Monaco code editor",
  "author": "ian-craig",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/jest": "24.0.18",
    "@types/node": "12.7.2",
    "@types/nodegit": "^0.24.10",
    "@types/p-queue": "^3.2.1",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-redux": "^7.1.2",
    "@types/redux": "^3.6.0",
    "cross-env": "^5.2.0",
    "electron-is-dev": "^1.1.0",
    "electron-store": "^4.0.0",
    "monaco-editor": "^0.17.1",
    "nodegit": "^0.25.1",
    "office-ui-fabric-react": "^7.27.1",
    "p-queue": "^6.1.1",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-list-select": "^0.4.1",
    "react-monaco-editor": "^0.30.1",
    "react-redux": "^7.1.1",
    "react-scripts": "3.1.1",
    "react-split-pane": "^0.1.87",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.1",
    "short-hash": "^1.0.0",
    "typescript": "3.5.3"
  },
  "homepage": ".",
  "main": "build/electron.js",
  "build": {
    "appId": "com.electron.diffy"
  },
  "scripts": {
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test --env=jsdom",
    "electron-build": "electron-builder",
    "release": "yarn react-build && yarn run compile && electron-builder --publish=always",
    "build": "yarn react-build && yarn run compile && yarn electron-build",
    "build:local": "yarn react-build && yarn run compile && yarn electron-build --dir",
    "compile": "tsc -p electron-tsconfig.json --noEmit false",
    "start": "concurrently \"yarn compile --watch\" \"cross-env BROWSER=none yarn react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --write --ignore-path .gitignore **/*.{js,ts,tsx,css,json,md} "
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "concurrently": "^4.1.2",
    "electron": "^6.0.3",
    "electron-builder": "^21.2.0",
    "electron-devtools-installer": "^2.2.4",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "wait-on": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
